---
import GlassesSVG from "./GlassesSVG.astro";
import "../utils/pb"
import pb from "../utils/pb";
---

<div class="min-h-screen bg-gradient-to-b from-white to-green-50/30 py-12">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-12">
      <h1 class="text-4xl text-gray-900 mb-4">CONFIGURATEUR DE LUNETTES</h1>
      <p class="text-gray-600">
        Cr√©ez vos lunettes personnalis√©es √©tape par √©tape
      </p>
    </div>

    <div class="mb-12">
      <div class="flex justify-between mb-4" id="progress-steps">
        {
          [
            { id: 1, title: "Mat√©riaux" },
            { id: 2, title: "Dimensions" },
            { id: 3, title: "Couleurs" },
            { id: 4, title: "Aper√ßu final" },
          ].map((step) => (
            <div
              class="flex flex-col items-center step-indicator"
              data-step={step.id}
            >
              <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 step-circle transition-all">
                {step.id}
              </div>
              <span class="text-xs mt-2 text-gray-600">{step.title}</span>
            </div>
          ))
        }
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div
          id="progress-bar"
          class="bg-[#2C7319] h-2 rounded-full transition-all duration-300"
          style="width: 20%"
        >
        </div>
      </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">
      <div class="bg-white rounded-3xl p-8 shadow-xl">
        <div id="config-content">
          <div class="step-content" data-step="1">
            <h2 class="text-2xl text-gray-900 mb-6">
              Choisissez vos mat√©riaux
            </h2>

            <div class="mb-6">
              <label class="block text-sm text-gray-700 mb-3"
                >Mat√©riau de la monture</label
              >
              <div class="grid grid-cols-2 gap-4">
                {
                    [
                    {
                      id: "acetate",
                      name: "Ac√©tate",
                      desc: "L√©ger et confortable",
                    },
                    { id: "metal", name: "M√©tal", desc: "√âl√©gant et durable" },
                    {
                      id: "titanium",
                      name: "Titane", 
                      desc: "Premium et r√©sistant",
                    },
                    { id: "wood", name: "Bois", desc: "Naturel et unique" },
                  ].map((material) => (
                    <label class="material-option border-2 border-gray-200 rounded-xl p-4 cursor-pointer hover:border-[#2C7319] transition-all">
                      <input
                        type="radio"
                        name="frameMaterial"
                        value={material.name}
                        class="hidden material-radio"
                        data-material-type="frame"
                      />
                      <div class="text-sm text-gray-900 mb-1">
                        {material.name}
                      </div>
                      <div class="text-xs text-gray-600">{material.desc}</div>
                    </label>
                  ))
                }
              </div>
            </div>

            <div class="mb-6">
              <label class="block text-sm text-gray-700 mb-3"
                >Mat√©riau des branches</label
              >
              <div class="grid grid-cols-2 gap-4">
                {
                  [
                    {
                      id: "acetate",
                      name: "Ac√©tate",
                      desc: "L√©ger et confortable",
                    },
                    { id: "metal", name: "M√©tal", desc: "√âl√©gant et durable" },
                    {
                      id: "titanium",
                      name: "Titane",
                      desc: "Premium et r√©sistant",
                    },
                    { id: "wood", name: "Bois", desc: "Naturel et unique" },
                  ].map((material) => (
                    <label class="material-option border-2 border-gray-200 rounded-xl p-4 cursor-pointer hover:border-[#2C7319] transition-all">
                      <input
                        type="radio"
                        name="branchesMaterial"
                        value={material.name}
                        class="hidden material-radio"
                        data-material-type="branches"
                      />
                      <div class="text-sm text-gray-900 mb-1">
                        {material.name}
                      </div>
                      <div class="text-xs text-gray-600">{material.desc}</div>
                    </label>
                  ))
                }
              </div>
            </div>
          </div>

          <div class="step-content hidden" data-step="2">
            <h2 class="text-2xl text-gray-900 mb-6">Ajustez les dimensions</h2>

            <div class="space-y-6">
              <div>
                <label class="block text-sm text-gray-700 mb-3"
                  >Largeur du pont : <span id="bridge-value">18</span>mm</label
                >
                <input
                  type="range"
                  min="14"
                  max="22"
                  value="18"
                  class="w-full dimension-slider"
                  data-target="bridge-value"
                  data-dimension-type="bridge"
                />
              </div>

              <div>
                <label class="block text-sm text-gray-700 mb-3"
                  >Largeur des verres : <span id="lens-value">50</span>mm</label
                >
                <input
                  type="range"
                  min="45"
                  max="60"
                  value="50"
                  class="w-full dimension-slider"
                  data-target="lens-value"
                  data-dimension-type="lens"
                />
              </div>
            </div>
          </div>

          <div class="step-content hidden" data-step="3">
            <h2 class="text-2xl text-gray-900 mb-6">
              Personnalisez les couleurs
            </h2>

            <div class="space-y-6">
              <div>
                <label class="block text-sm text-gray-700 mb-3"
                  >Couleur de la monture</label
                >
                <input
                  type="color"
                  value="#2C7319"
                  class="w-full h-12 rounded-lg border border-gray-300"
                  id="frame-color"
                />
              </div>

              <div>
                <label class="block text-sm text-gray-700 mb-3"
                  >Couleur des branches</label
                >
                <input
                  type="color"
                  value="#1a4d0f"
                  class="w-full h-12 rounded-lg border border-gray-300"
                  id="temple-color"
                />
              </div>

              <div>
                <label class="block text-sm text-gray-700 mb-3"
                  >Teinte des verres</label
                >
                <input
                  type="color"
                  value="#87CEEB"
                  class="w-full h-12 rounded-lg border border-gray-300"
                  id="lens-color"
                />
              </div>
            </div>
          </div>

          <div class="step-content hidden" data-step="4">
            <h2 class="text-2xl text-gray-900 mb-6">Votre cr√©ation</h2>

            <div class="bg-green-50 rounded-xl p-6 mb-6">
              <div class="flex items-center gap-3 mb-4">
                <svg
                  class="w-6 h-6 text-[#2C7319]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="text-lg text-gray-900">Configuration termin√©e</h3>
              </div>
              <p class="text-sm text-gray-600">
                Vos lunettes sont pr√™tes ! Vous pouvez les exporter ou les t√©l√©charger.
              </p>
            </div>

            <div class="space-y-3">
              <button
                class="w-full bg-[#2C7319] hover:bg-[#3a9122] text-white py-4 rounded-xl transition-all flex items-center justify-center gap-2"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"
                  ></path>
                </svg>
                T√©l√©charger le fichier
              </button>

              <button
                class="w-full bg-white border-2 border-[#2C7319] text-[#2C7319] hover:bg-green-50 py-4 rounded-xl transition-all flex items-center justify-center gap-2"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
                Recommencer
              </button>
            </div>
          </div>
        </div>

        <div class="flex justify-between mt-8 pt-8 border-t border-gray-200">
          <button
            id="prev-btn"
            class="px-6 py-3 border border-gray-300 text-gray-700 rounded-xl hover:bg-gray-50 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
            disabled
          >
            <svg
              class="w-5 h-5 inline mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Pr√©c√©dent
          </button>

          <button
            id="next-btn"
            class="px-6 py-3 bg-[#2C7319] text-white rounded-xl hover:bg-[#3a9122] transition-all"
          >
            Suivant
            <svg
              class="w-5 h-5 inline ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </div>

      <div
        class="bg-white rounded-3xl p-8 shadow-xl sticky top-24 h-fit"
        id="glasses-preview"
        style="
          --branches-color: #1a4d0f;
          --monture-color: #2C7319;
          --verres-color: #87CEEB;
        "
      >
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl text-gray-900">APER√áU 3D</h2>
          <div class="flex gap-2">
            <button
              class="zoom-btn w-10 h-10 border border-gray-300 rounded-lg hover:bg-gray-50 transition-all"
              data-zoom="out"
            >
              -
            </button>
            <button
              class="zoom-btn w-16 h-10 border border-gray-300 rounded-lg hover:bg-gray-50 transition-all"
              data-zoom="reset"
            >
              <span id="zoom-display">100%</span>
            </button>
            <button
              class="zoom-btn w-10 h-10 border border-gray-300 rounded-lg hover:bg-gray-50 transition-all"
              data-zoom="in"
            >
              +
            </button>
          </div>
        </div>

        <div
          class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-12 flex items-center justify-center min-h-[400px]"
        >
          <GlassesSVG
            branchesColor="var(--branches-color)"
            montureColor="var(--monture-color)"
            verresColor="var(--verres-color)"
          />
        </div>

        <div class="mt-6 bg-green-50 rounded-xl p-4">
          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 text-[#2C7319] mt-0.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
            <div>
              <p class="text-sm text-gray-700 mb-1">üá´üá∑ Made in France</p>
              <p class="text-xs text-gray-600">
                Fabrication artisanale √† Montb√©liard
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import pb from "../utils/pb";

  let currentStep = 1;
  const totalSteps = 4;
  let zoomLevel = 1;
  let configData = {
    frameMaterialId: "",
    branchesMaterialId: "",
    frameMaterial: "",
    branchesMaterial: "",
    bridgeWidth: 18,
    lensWidth: 50,
    frameColor: "#2C7319",
    templeColor: "#1a4d0f",
    lensColor: "#87CEEB",
  };

  function updateUI() {
    const progress = (currentStep / totalSteps) * 100;
    const progressBar = document.getElementById("progress-bar");
    if (progressBar) progressBar.style.width = progress + "%";

    document.querySelectorAll(".step-indicator").forEach((indicator, index) => {
      const circle = indicator.querySelector(".step-circle");
      if (index + 1 <= currentStep) {
        circle?.classList.add("bg-[#2C7319]", "text-white");
        circle?.classList.remove("bg-gray-200", "text-gray-600");
      } else {
        circle?.classList.remove("bg-[#2C7319]", "text-white");
        circle?.classList.add("bg-gray-200", "text-gray-600");
      }
    });

    document.querySelectorAll(".step-content").forEach((content) => {
      const step = parseInt(content.getAttribute("data-step") || "0");
      content.classList.toggle("hidden", step !== currentStep);
    });

    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");
    if (prevBtn) prevBtn.disabled = currentStep === 1;
    if (nextBtn && currentStep === totalSteps) {
      nextBtn.textContent = "Termin√©";
    }
  }

  async function findOrCreateMaterial(materialName, collection) {
    try {
      const existingRecords = await pb.collection(collection).getList(1, 1, {
        filter: `matiere_${collection === "mat_montures" ? "montures" : "branches"} = "${materialName}"`,
      });

      if (existingRecords.items.length > 0) {
        return existingRecords.items[0].id;
      }

      const fieldName = collection === "mat_montures" ? "matiere_montures" : "matiere_branches";
      const newRecord = await pb.collection(collection).create({
        [fieldName]: materialName,
      });

      return newRecord.id;
    } catch (error) {
      console.error(`Erreur lors de la recherche/cr√©ation du mat√©riau dans ${collection}:`, error);
      return null;
    }
  }

  async function saveFrameMaterialToPocketBase() {
    try {
      const frameMaterial = document.querySelector(
        'input[name="frameMaterial"]:checked'
      );
      
      if (!frameMaterial) {
        console.warn("Aucun mat√©riau de monture s√©lectionn√©");
        return;
      }

      const materialValue = frameMaterial.value;
      const materialId = await findOrCreateMaterial(materialValue, "mat_montures");

      if (materialId) {
        configData.frameMaterialId = materialId;
        configData.frameMaterial = materialValue;
        console.log("Mat√©riau de monture trouv√©/cr√©√© avec ID:", materialId);
      }
    } catch (error) {
      console.error("Erreur lors de l'enregistrement du mat√©riau de monture:", error);
    }
  }

  async function savebranchesMaterialToPocketBase() {
    try {
      const branchesMaterial = document.querySelector(
        'input[name="branchesMaterial"]:checked'
      );
      
      if (!branchesMaterial) {
        console.warn("Aucun mat√©riau de branches s√©lectionn√©");
        return;
      }

      const materialValue = branchesMaterial.value;
      const materialId = await findOrCreateMaterial(materialValue, "mat_branches");

      if (materialId) {
        configData.branchesMaterialId = materialId;
        configData.branchesMaterial = materialValue;
        console.log("Mat√©riau de branches trouv√©/cr√©√© avec ID:", materialId);
      }
    } catch (error) {
      console.error("Erreur lors de l'enregistrement du mat√©riau de branches:", error);
    }
  }

  async function saveDimensionsToPocketBase() {
    try {
      const bridgeValue = parseInt(document.getElementById("bridge-value")?.textContent || "18");
      const lensValue = parseInt(document.getElementById("lens-value")?.textContent || "50");

      if (!bridgeValue || !lensValue) {
        console.warn("Valeurs de dimensions manquantes");
        return;
      }

      const record = await pb.collection("lunettes").create({
        lar_pont: bridgeValue,
        lar_verres: lensValue,
      });

      console.log("Dimensions enregistr√©es:", record);
      configData.bridgeWidth = bridgeValue;
      configData.lensWidth = lensValue;
    } catch (error) {
      console.error("Erreur lors de l'enregistrement des dimensions:", error);
    }
  }

  function getSVGCode() {
    const svgElement = document.querySelector('#glasses-preview svg') || 
                       document.querySelector('svg#glasses-svg');
    
    if (!svgElement) {
      console.warn("√âl√©ment SVG introuvable");
      return null;
    }

    return svgElement.outerHTML;
  }

  async function saveColorsToPocketBase() {
    try {
      const frameColorInput = document.getElementById("frame-color");
      const templeColorInput = document.getElementById("temple-color");
      const lensColorInput = document.getElementById("lens-color");
      
      if (!frameColorInput || !templeColorInput || !lensColorInput) {
        console.warn("Inputs couleur introuvables");
        return;
      }

      const frameColorValue = frameColorInput.value;
      const templeColorValue = templeColorInput.value;
      const lensColorValue = lensColorInput.value;
      const svgCode = getSVGCode();

      if (!svgCode) {
        console.warn("Code SVG introuvable");
        return;
      }

      const record = await pb.collection("lunettes").create({
        montures_couleur: frameColorValue,
        branches_couleur: templeColorValue,
        verres_couleur: lensColorValue,
        code_svg: svgCode,
        matiere_montures: configData.frameMaterialId,
        matiere_branches: configData.branchesMaterialId,
      });

      console.log("Couleurs, SVG et relations enregistr√©s:", record);
      configData.frameColor = frameColorValue;
      configData.templeColor = templeColorValue;
      configData.lensColor = lensColorValue;
    } catch (error) {
      console.error("Erreur lors de l'enregistrement des couleurs et relations:", error);
    }
  }

  document.getElementById("prev-btn")?.addEventListener("click", () => {
    if (currentStep > 1) {
      currentStep--;
      updateUI();
    }
  });

  document.getElementById("next-btn")?.addEventListener("click", async () => {
    if (currentStep === 1) {
      await saveFrameMaterialToPocketBase();
      await savebranchesMaterialToPocketBase();
    } else if (currentStep === 2) {
      await saveDimensionsToPocketBase();
    } else if (currentStep === 3) {
      await saveColorsToPocketBase();
    }

    if (currentStep < totalSteps) {
      currentStep++;
      updateUI();
    }
  });

  document.querySelectorAll(".material-radio").forEach((radio) => {
    radio.addEventListener("change", (e) => {
      document.querySelectorAll(".material-option").forEach((opt) => {
        opt.classList.remove("border-[#2C7319]", "bg-green-50");
      });
      const target = e.target;
      target
        .closest(".material-option")
        ?.classList.add("border-[#2C7319]", "bg-green-50");

      if (target.getAttribute("data-material-type") === "frame") {
        configData.frameMaterial = target.value;
      } else if (target.getAttribute("data-material-type") === "branches") {
        configData.branchesMaterial = target.value;
      }
    });
  });

  document.querySelectorAll(".dimension-slider").forEach((slider) => {
    slider.addEventListener("input", (e) => {
      const target = e.target;
      const targetId = target.getAttribute("data-target");
      const valueEl = document.getElementById(targetId || "");
      if (valueEl) valueEl.textContent = target.value;

      if (targetId === "bridge-value") {
        configData.bridgeWidth = parseInt(target.value);
      } else if (targetId === "lens-value") {
        configData.lensWidth = parseInt(target.value);
      }
    });
  });

  document.querySelectorAll(".zoom-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const target = e.currentTarget;
      const action = target.getAttribute("data-zoom");
      const preview = document.getElementById("glasses-preview");
      const display = document.getElementById("zoom-display");

      if (action === "in") zoomLevel = Math.min(zoomLevel + 0.2, 2);
      if (action === "out") zoomLevel = Math.max(zoomLevel - 0.2, 0.6);
      if (action === "reset") zoomLevel = 1;

      if (preview) preview.style.transform = `scale(${zoomLevel})`;
      if (display) display.textContent = Math.round(zoomLevel * 100) + "%";
    });
  });

  window.addEventListener("DOMContentLoaded", () => {
    const previewContainer = document.getElementById("glasses-preview");

    const inputs = {
      branches: document.getElementById("temple-color"),
      monture: document.getElementById("frame-color"),
      verres: document.getElementById("lens-color"),
    };

    Object.entries(inputs).forEach(([part, input]) => {
      if (input) {
        input.addEventListener("input", () => {
          previewContainer.style.setProperty(`--${part}-color`, input.value);

          if (part === "branches") {
            configData.templeColor = input.value;
          } else if (part === "monture") {
            configData.frameColor = input.value;
          } else if (part === "verres") {
            configData.lensColor = input.value;
          }
        });
      }
    });
  });

  updateUI();

  
</script>
