    <!-- Frame -->
    <g>
      <!-- Left lens -->
      <ellipse class="glasses-lens" cx="160" cy="150" rx="65" ry="55"/>
      <ellipse class="glasses-frame" cx="160" cy="150" rx="65" ry="55"/>
      
