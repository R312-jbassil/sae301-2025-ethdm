  </g>
</svg>

<script>
  if (typeof window !== 'undefined') {
    const updateColors = () => {
      const frameColor = document.getElementById('frame-color')?.value || '#2C7319';
      const templeColor = document.getElementById('temple-color')?.value || '#1a4d0f';
      const lensColor = document.getElementById('lens-color')?.value || '#87CEEB';
      
      document.documentElement.style.setProperty('--frame-color', frameColor);
      document.documentElement.style.setProperty('--temple-color', templeColor);
      document.documentElement.style.setProperty('--lens-color', lensColor);
    };

    document.getElementById('frame-color')?.addEventListener('input', updateColors);
    document.getElementById('temple-color')?.addEventListener('input', updateColors);
    document.getElementById('lens-color')?.addEventListener('input', updateColors);
  }
</script>
