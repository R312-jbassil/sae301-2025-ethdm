---
// CartPage - Interface panier (donn√©es PocketBase)
import GlassesSVG from './GlassesSVG.astro';
---

<div class="min-h-screen bg-gradient-to-b from-white to-green-50/30 py-12">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl text-gray-900 mb-2">MON PANIER</h1>
      <p class="text-gray-600">Finalisez votre commande</p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Cart Items -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Empty State -->
        <div id="empty-cart" class="text-center py-20 bg-white rounded-3xl shadow-xl">
          <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h2 class="text-2xl text-gray-900 mb-4">Votre panier est vide</h2>
          <p class="text-gray-600 mb-8">Explorez notre configurateur pour cr√©er vos lunettes</p>
          <a
            href="/"
            class="inline-flex items-center bg-[#2C7319] hover:bg-[#3a9122] text-white px-6 py-3 rounded-xl transition-all"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            CR√âER MES LUNETTES
          </a>
        </div>

        <!-- Cart Items (hidden by default, populated from PocketBase) -->
        <div id="cart-items" class="space-y-4 hidden">
          <!-- Example Cart Item -->
          <div class="cart-item bg-white rounded-2xl p-6 shadow-lg">
            <div class="flex gap-6">
              <div class="w-48 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-4 flex items-center justify-center">
                <GlassesSVG />
              </div>

              <div class="flex-1">
                <div class="flex justify-between mb-4">
                  <div>
                    <h3 class="text-lg text-gray-900 mb-2">Lunettes personnalis√©es</h3>
                    <p class="text-sm text-gray-600">Mat√©riau: <span class="item-material">Ac√©tate</span></p>
                    <p class="text-sm text-gray-600">Dimensions: <span class="item-dimensions">50mm √ó 18mm</span></p>
                  </div>
                  <div class="text-right">
                    <p class="text-2xl text-[#2C7319] item-price">299‚Ç¨</p>
                  </div>
                </div>

                <div class="flex items-center justify-between">
                  <div class="flex gap-2">
                    <div class="flex items-center gap-1">
                      <span class="text-xs text-gray-600">Monture:</span>
                      <div class="w-6 h-6 rounded border border-gray-300 item-frame-color" style="background-color: #2C7319;"></div>
                    </div>
                    <div class="flex items-center gap-1">
                      <span class="text-xs text-gray-600">Branches:</span>
                      <div class="w-6 h-6 rounded border border-gray-300 item-temple-color" style="background-color: #1a4d0f;"></div>
                    </div>
                  </div>

                  <button class="btn-remove-item text-red-600 hover:text-red-800 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-3xl p-8 shadow-xl sticky top-24">
          <h2 class="text-2xl text-gray-900 mb-6">R√âCAPITULATIF</h2>

          <div class="space-y-4 mb-6 pb-6 border-b border-gray-200">
            <div class="flex justify-between text-gray-600">
              <span>Sous-total (<span id="item-count">0</span> article<span id="item-plural">s</span>)</span>
              <span id="subtotal">0‚Ç¨</span>
            </div>
            <div class="flex justify-between text-gray-600">
              <span>Livraison</span>
              <span class="text-[#2C7319]">Gratuite</span>
            </div>
          </div>

          <div class="flex justify-between text-xl mb-6">
            <span class="text-gray-900">Total</span>
            <span class="text-[#2C7319]" id="total">0‚Ç¨</span>
          </div>

          <button 
            id="checkout-btn"
            class="w-full bg-[#2C7319] hover:bg-[#3a9122] text-white py-4 rounded-xl transition-all mb-4 disabled:opacity-50 disabled:cursor-not-allowed"
            disabled
          >
            PASSER LA COMMANDE
          </button>

          <a
            href="/gallery"
            class="block text-center text-[#2C7319] hover:underline"
          >
            Continuer mes achats
          </a>

          <div class="mt-8 pt-8 border-t border-gray-200 space-y-3">
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <svg class="w-5 h-5 text-[#2C7319]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              Paiement s√©curis√©
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <svg class="w-5 h-5 text-[#2C7319]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Garantie 30 jours satisfait ou rembours√©
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <svg class="w-5 h-5 text-[#2C7319]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
              üá´üá∑ Made in France - Montb√©liard
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Cart management (to be connected with PocketBase)
  let cartItems: any[] = [];

  function updateCart() {
    const itemCount = cartItems.length;
    const subtotal = cartItems.reduce((sum, item) => sum + (item.price || 299), 0);

    document.getElementById('item-count')!.textContent = itemCount.toString();
    document.getElementById('item-plural')!.textContent = itemCount > 1 ? 's' : '';
    document.getElementById('subtotal')!.textContent = subtotal + '‚Ç¨';
    document.getElementById('total')!.textContent = subtotal + '‚Ç¨';

    const checkoutBtn = document.getElementById('checkout-btn') as HTMLButtonElement;
    if (checkoutBtn) {
      checkoutBtn.disabled = itemCount === 0;
    }

    if (itemCount === 0) {
      document.getElementById('empty-cart')?.classList.remove('hidden');
      document.getElementById('cart-items')?.classList.add('hidden');
    } else {
      document.getElementById('empty-cart')?.classList.add('hidden');
      document.getElementById('cart-items')?.classList.remove('hidden');
    }
  }

  // Remove item handlers
  document.querySelectorAll('.btn-remove-item').forEach(btn => {
    btn.addEventListener('click', () => {
      if (confirm('Retirer cet article du panier ?')) {
        alert('Article retir√© (√† connecter avec PocketBase)');
      }
    });
  });

  // Checkout
  document.getElementById('checkout-btn')?.addEventListener('click', () => {
    alert('Redirection vers le paiement (√† connecter avec PocketBase)');
  });

  // Initialize
  updateCart();

  // TODO: Load cart from PocketBase
  // const cart = await pb.collection('cart').getList();
  // cartItems = cart.items;
  // updateCart();
</script>
