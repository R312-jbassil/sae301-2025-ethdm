              placeholder="votre@email.com"
            />
          </div>

          <div>
            <label class="block text-sm text-gray-700 mb-2">Mot de passe</label>
            <input 
              type="password" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-700 focus:border-transparent outline-none transition-all"
              placeholder="••••••••"
            />
          </div>

          <div>
            <label class="block text-sm text-gray-700 mb-2">Confirmer le mot de passe</label>
            <input 
              type="password" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-700 focus:border-transparent outline-none transition-all"
              placeholder="••••••••"
            />
          </div>

          <div class="flex items-start gap-2">
            <input type="checkbox" required class="w-4 h-4 mt-1 text-green-700 border-gray-300 rounded focus:ring-green-700" />
            <label class="text-sm text-gray-600">
